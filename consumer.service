[Unit]
Description=Consumer
After=network.target

[Service]
Type=simple
Restart=always
User=root
WorkingDirectory=/home/saba/Work/devops-work/DRaaS
ExecStart=/home/saba/Work/devops-work/DRaaS/env/bin/python /home/saba/Work/devops-work/DRaaS/consumer.py
StandardOutput=append:/var/log/consumer.log
