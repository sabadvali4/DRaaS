[Unit]
Description=Producer
After=network.target

[Service]
Type=simple
Restart=always
User=root
WorkingDirectory=/home/saba/Work/devops-work/DRaaS
ExecStart=/home/saba/Work/devops-work/DRaaS/env/bin/python /home/saba/Work/devops-work/DRaaS/producer.py
StandardOutput=append:/var/log/producer.log
StandardError=append:/var/log/producer_error.log
SyslogIdentifier=producer

[Install]
WantedBy=multi-user.target